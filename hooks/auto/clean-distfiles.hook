#!/usr/bin/env bash
hook_auto_names() {
    echo sync_all_post
}

hook_run_sync_all_post() {
    source "${PALUDIS_EBUILD_DIR}/echo_functions.bash"

    echo
    einfo "Removing unused distfiles..."
    (
	${CAVE} print-unused-distfiles | xargs rm -v --
    ) 2>/dev/null
    einfo "Done removing unused distfiles."

    return 0
}

