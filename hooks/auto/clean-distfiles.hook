#!/usr/bin/env bash
hook_auto_names() {
    echo sync_all_post
}

hook_run_sync_all_post() {
    export PATH="$(${PALUDIS_EBUILD_DIR}/utils/canonicalise ${PALUDIS_EBUILD_DIR}/utils/ ):${PATH}"
    source ${PALUDIS_ECHO_FUNCTIONS_DIR:-${PALUDIS_EBUILD_DIR}}/echo_functions.bash
    
    einfo_unhooked "Removing unused distfiles..."
    (
	${CAVE:-cave} print-unused-distfiles | xargs rm -v --
    ) 2>/dev/null
    einfo_unhooked "Done removing unused distfiles."

    return 0
}

